# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cucus-db

# JWT Secret Key (güçlü bir rastgele string kullanın)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Server Port
PORT=4000

# Email Configuration (Gmail SMTP)
# Not: Gmail için App Password kullanmanız gerekiyor
# https://myaccount.google.com/apppasswords adresinden oluşturabilirsiniz
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Client URL (Production için cucus.online, local test için localhost)
CLIENT_URL=https://cucus.online
# CLIENT_URL=http://localhost:4000
